<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Org name</th>
      <th>Org identifier</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Addr line1</th>
      <th>Addr line2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.org_name %></td>
        <td><%= organization.org_identifier %></td>
        <td><%= organization.first_name %></td>
        <td><%= organization.last_name %></td>
        <td><%= organization.addr_line1 %></td>
        <td><%= organization.addr_line2 %></td>
        <td><%= organization.city %></td>
        <td><%= organization.state %></td>
        <td><%= organization.country %></td>
        <td><%= organization.zipcode %></td>
        <td><%= organization.user %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

