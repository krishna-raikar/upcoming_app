<div class="row">
      <div class="col-md-4 offset-md-4">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Change your password</h3>
              </div>
              <div class="panel-body">

                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= devise_error_messages! %>
                  <%= f.hidden_field :reset_password_token %>

                  <div class="">
                    <%= f.password_field :password, label:false, autocomplete: true, class: 'form-control p-2', placeholder: 'New Password' %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, label:false, autocomplete: "off", class: 'form-control p-2', placeholder: 'Confirm New Password' %>
                  </div>



                  <div class="form-group">
                    <%= f.submit "Change my password", class: 'btn btn-primary btn-block p-2' %>
                  </div>
                <% end %>
                <div class="form-group text-center">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
          </div>
      </div>
  </div>
