<div class="row">
    <div class="col-md-4 offset-md-4 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Please sign in</h3>
            </div>
            <div class="panel-body">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="">
                  <%= f.email_field :email, label: false, autofocus: true, autocomplete: "email", class: 'form-control p-2', placeholder: 'E-mail' %>
                </div>

                <div class="mb-1">
                  <%= f.password_field :password, label:false, autocomplete: "off", class: 'form-control p-2', placeholder: 'Password' %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group text-center">
                    <%= f.check_box :remember_me %>
                    Remember me
                    <%#= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="form-group">
                  <%= f.submit "Log in", class: 'btn btn-primary btn-block p-2' %>
                </div>
              <% end %>
              <div class="form-group text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
        </div>
    </div>
</div>
