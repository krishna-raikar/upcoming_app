
<div class="row">
      <div class="col-md-4 offset-md-4">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Welcome!</h3>
              </div>
              <div class="panel-body">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <%= f.email_field :email, label: false, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'E-mail' %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, label:false, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, label:false, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation' %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Sign Up", class: 'btn btn-primary btn-block' %>
                  </div>
                <% end %>
                <div class="form-group text-center">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
          </div>
      </div>
  </div>
